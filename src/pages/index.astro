---
import Layout from "../layouts/Layout.astro";
import PostCard from "@components/PostCard.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import PostDivider from "@components/PostDivider.astro";
import Subtitle from "@components/Subtitle.astro";
interface Props {
  posts: CollectionEntry<"posts">[];
}
const posts = await getCollection("posts");
---

<Layout
  title="Uriel Spiridione - Blog"
  description="Blog y repositorio personal hecho con astro"
>
  <main
    class="text-neutral-800 dark:text-neutral-200 flex items-center flex-col"
  >
    <div class="max-w-2xl w-full my-20">
      <Subtitle>MÃ¡s recientes</Subtitle>
      <div class="mt-8 px-2 md:px-0">
        {
          posts.map((post, i) => (
            <>
              {i !== 0 && <PostDivider />}
              <PostCard post={post} />
            </>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
