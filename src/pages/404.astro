---
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Not found" description="Página no encontrada">
  <main class="flex items-center flex-col">
    <section class="max-w-3xl w-full my-20">
      <Title>404</Title>
      <div class="px-3">
        <h3 class="text-xl md:text-2xl font-semibold mt-8">
          ¡Parece que has encontrado la puerta hacia la nada!
        </h3>
        <p class="text-base md:text-lg mb-3 text-neutral-500">
          ¡Lo siento por eso! Por favor, visita nuestra página de inicio para
          llegar a donde necesitas ir
        </p>
        <a
          class="p-2 text-center block select-none w-full rounded-lg bg-neutral-50 border dark:border-none dark:bg-neutral-800 hover:bg-neutral-200 font-semibold text-neutral-900 dark:text-white dark:hover:bg-neutral-700 transition-all hover:scale-[103%] active:bg-neutral-300 dark:active:bg-neutral-600 active:scale-90"
          href="/"
        >
          <span class="text-center">Llevame a la página de inicio</span>
        </a>
      </div>
    </section>
  </main>
</Layout>
