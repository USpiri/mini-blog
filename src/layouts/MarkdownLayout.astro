---
import Layout from "./Layout.astro";
import Markdown from "@components/markdown/Markdown.astro";

interface Props {
  id: string;
  title: string;
  description?: string;
  date?: Date;
  tags?: string[];
  pageFind?: boolean;
  seoDescription?: string;
  hideLinks?: boolean;
}

const {
  id,
  title,
  description,
  date,
  tags,
  pageFind,
  seoDescription,
  hideLinks = false,
} = Astro.props;
---

<Layout
  title={`${title} | Uriel Spiridione`}
  description={seoDescription ?? description ?? ""}
>
  <main class="flex items-center flex-col">
    <Markdown
      id={id}
      title={title}
      description={description}
      date={date}
      tags={tags}
      pageFind={pageFind}
      hideLinks={hideLinks}
    >
      <slot />
    </Markdown>
  </main>
</Layout>
