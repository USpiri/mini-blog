---
import type { HTMLAttributes } from "astro/types";
import NavigationNextIcon from "./icons/NavigationNextIcon.astro";

interface Props extends HTMLAttributes<"a"> {
  label: string;
}
const { label } = Astro.props;
---

<a class="flex-[1_0_40%]" {...Astro.props}>
  <article
    class="border col-auto rounded-lg py-4 px-5 dark:border-neutral-700 dark:hover:bg-neutral-800 hover:bg-neutral-200 flex items-center justify-between"
  >
    <p class="text-xl font-semibold">{label}</p>
    <NavigationNextIcon />
  </article>
</a>
