---
import FormattedDate from "@components/FormattedDate.astro";
import PostTags from "@components/PostTags.astro";
import ShareLinks from "@components/ShareLinks.astro";

interface Props {
  title: string;
  description?: string;
  tags?: string[];
  date?: Date;
  hideLinks?: boolean;
}
const { title, description, tags, date, hideLinks = false } = Astro.props;
---

{
  (tags || date) && (
    <div class="flex gap-2 mb-2 dark:text-neutral-400 text-neutral-400 text-sm items-center font-semibold">
      {date && <FormattedDate date={date} />}
      {date && tags && <span>|</span>}
      {tags && <PostTags tags={tags} />}
    </div>
  )
}
<h1 class="text-4xl font-bold mb-3">{title}</h1>
{
  description !== undefined && (
    <p class="mb-3 text-base font-semibold dark:text-neutral-400 text-neutral-500">
      {description}
    </p>
  )
}
{
  !hideLinks && (
    <aside class="flex gap-2 justify-end" data-pagefind-ignore>
      <ShareLinks />
    </aside>
  )
}
