---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  class?: string;
  id?: string;
}
const { class: className, ...props } = Astro.props;
---

<a
  class={`${className} rounded-lg hover:bg-neutral-200 font-semibold dark:hover:bg-neutral-700 transition-all hover:scale-105 active:bg-neutral-300 dark:active:bg-neutral-600 active:scale-90`}
  {...props}
>
  <slot />
</a>
